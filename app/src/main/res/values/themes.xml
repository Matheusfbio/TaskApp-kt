<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TaskApp" parent="Theme.Material3.DayNight.NoActionBar">
    <!-- Primary brand color-->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/color_default</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Second brand color-->
        <item name="colorSecondary">@color/color_default</item>
        <item name="colorSecondaryVariant">@color/color_default</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status Bar color -->
        <item name="android:windowBackground">@color/color_default</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    </style>


    <style name="CustomTabLayout" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
